@{
    ViewData["Title"] = "Home Page";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <label for="usernameField" id="usernameLabel">Username</label>
        <input type="text" class="form-control" id="usernameField" name="username" placeholder="Enter Username">
        <small id="usernameError" class="form-text text-muted alert-danger">@ViewBag.UsernameErrorMessage</small>
    </div>
    <div class="form-group">
        <label for="passwordField" id="passwordLabel">Password</label>
        <input type="password" class="form-control" id="passwordField" name="password" placeholder="Enter Password">
        <small id="passwordError" class="form-text text-muted alert-danger">@ViewBag.PasswordErrorMessage</small>
    </div>
    <button type="submit" id="signinSubmit" class="btn btn-primary">Submit</button>
</form>

